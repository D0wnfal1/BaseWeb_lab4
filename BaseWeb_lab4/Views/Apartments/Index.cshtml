@model IEnumerable<BaseWeb_lab4.Models.Apartment>

@{
    ViewData["Title"] = "Apartments";
}

<h1>Apartments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-2">
            <input type="text" name="district" value="@ViewBag.District" class="form-control" placeholder="District" />
        </div>
        <div class="col-md-2">
            <input type="number" name="minPrice" value="@ViewBag.MinPrice" class="form-control" placeholder="Min Price" step="0.01" />
        </div>
        <div class="col-md-2">
            <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" class="form-control" placeholder="Max Price" step="0.01" />
        </div>
        <div class="col-md-2">
            <input type="number" name="minRooms" value="@ViewBag.MinRooms" class="form-control" placeholder="Min Rooms" />
        </div>
        <div class="col-md-2">
            <input type="number" name="maxRooms" value="@ViewBag.MaxRooms" class="form-control" placeholder="Max Rooms" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-secondary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th>
                Owner
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>